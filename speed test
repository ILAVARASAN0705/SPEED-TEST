<body>
    <h2>üöÄ Ultra Fast Internet Speed Test</h2>
    <button onclick="startSpeedTest()">Start Test</button>
    <div id="result"></div>

    <script>
        function startSpeedTest() {
            let startTime, endTime;
            let downloadSize = 5 * 1024 * 1024; // 5MB file
            let testFile = "https://upload.wikimedia.org/wikipedia/commons/3/3a/Dummy_File_5MB.jpg"; 

            document.getElementById("result").innerHTML = "<span class='loading'>Testing... ‚è≥</span>";
            document.getElementById("result").classList.remove("show");

            startTime = new Date().getTime();
            fetch(testFile, { method: 'GET', cache: 'no-cache' })
                .then(response => response.blob())
                .then(() => {
                    endTime = new Date().getTime();
                    let duration = (endTime - startTime) / 1000; // in seconds
                    let speedMbps = (downloadSize / (1024 * 1024) / duration).toFixed(2);
                    document.getElementById("result").innerText = "‚ö° Download Speed: " + speedMbps + " Mbps";
                    document.getElementById("result").classList.add("show");
                })
                .catch(() => {
                    document.getElementById("result").innerText = "‚ùå Speed test failed. Try again.";
                    document.getElementById("result").classList.add("show");
                });
        }
    </script>
